<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

 <!-- NuGet Package Information -->
  <PropertyGroup>
    <PackageId>NetStateMachine</PackageId>
    <Version>0.0.1</Version>
    <Authors>Arkadiusz Makosa</Authors>
    <Company>MakosaSoft</Company>
    <Description>A simple yet powerful library for implementing state machines in .NET</Description>
    <Copyright>Copyright © 2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>statemachine;state;fsm</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/ArkadiuszMakosa/NetStateMachine</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ArkadiuszMakosa/NetStateMachine.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
